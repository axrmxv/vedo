# Основные настройки
PROJECT_NAME="Vedo Calculator"
VERSION="1.0.0"
ENVIRONMENT=production

# Безопасность (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
SECRET_KEY=your-secret-key-change-this-to-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# База данных
# Для SQLite (по умолчанию)
DATABASE_URL=sqlite+aiosqlite:///./vedo.db

# Для PostgreSQL (раскомментируйте и настройте при необходимости)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vedo_db

# Администратор по умолчанию
ADMIN_USERNAME=admin
ADMIN_PASSWORD=adminpass

# Файлы
STORAGE_PATH=./storage
MAX_FILE_SIZE=20971520
FILE_RETENTION_DAYS=7

# Логирование
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Константы обработки файлов
FORM_CAPACITY_1=4
FORM_CAPACITY_2=5
FORM_CAPACITY_3=6
CUTOFF_TYPE_1=8
CUTOFF_TYPE_2=9
CUTOFF_TYPE_3=10
